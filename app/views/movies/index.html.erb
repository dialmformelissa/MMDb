<div class="row">
  <div class="col-md-11">
    <h2>My Movie Database</h2>
    <span class="btn btn-default"><%= link_to "Add movie", new_movie_path %></span>
  </div> 
</div>
<br>
<table class="table">
  <thead>
    <th>Title</th>
    <th>Format</th>
    <th>Streaming App</th>
    <th>Definition</th>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td><%= link_to movie.title, edit_movie_path(movie) %></td>
      <td>
        <% movie.formats.each do |format| %>
          <%= format.name %><br>
        <% end %> 
      </td>
      <td>
        <% movie.apps.each do |app| %>
        <%= app.name %><br>
      <% end %>
      </td>
      <td>
        <% movie.definitions.each do |definition| %>
        <%= definition.name %>
      <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
